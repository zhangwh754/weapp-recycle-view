<view class="product-item" bind:tap="onTap">
  <!-- 左侧图片 -->
  <view class="product-image-wrap">
    <image class="product-image" src="{{product.image}}" mode="aspectFill"></image>
  </view>

  <!-- 右侧信息 -->
  <view class="product-info">
    <!-- 商品名称 -->
    <view class="product-name">{{product.name}}</view>

    <!-- 商品标签 -->
    <view class="product-tags" wx:if="{{product.tags && product.tags.length > 0}}">
      <view class="tag" wx:for="{{product.tags}}" wx:key="index">{{item}}</view>
    </view>

    <!-- 商品描述 -->
    <view class="product-desc">{{product.description}}</view>

    <!-- 价格和销量信息 -->
    <view class="product-meta">
      <view class="price-wrap">
        <text class="price-symbol">¥</text>
        <text class="price">{{product.price}}</text>
        <text class="original-price" wx:if="{{product.originalPrice}}">¥{{product.originalPrice}}</text>
      </view>
      <view class="sales-info">
        <text class="sales">已售{{product.sales}}件</text>
      </view>
    </view>

    <!-- 底部信息 -->
    <view class="product-footer">
      <view class="rating" wx:if="{{product.rating}}">
        <text class="star">★</text>
        <text class="rating-score">{{product.rating}}</text>
      </view>
      <view class="stock">库存: {{product.stock}}</view>
    </view>
  </view>
</view>