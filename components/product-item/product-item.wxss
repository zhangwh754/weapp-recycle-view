.product-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  /* 固定高度，确保虚拟列表计算准确 */
  height: 220rpx;
  box-sizing: border-box;
}

.product-item:active {
  background: #f8f8f8;
}

/* 左侧图片 */
.product-image-wrap {
  flex-shrink: 0;
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.product-image {
  width: 100%;
  height: 100%;
}

/* 右侧信息 */
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 180rpx;
}

/* 商品名称 */
.product-name {
  flex-shrink: 0;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

/* 商品标签 */
.product-tags {
  display: flex;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.tag {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border-radius: 4rpx;
  background: #ff6b6b;
  color: #fff;
}

.tag:nth-child(2) {
  background: #4ecdc4;
}

/* 商品描述 */
.product-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}

/* 价格和销量 */
.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.price-wrap {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
  color: #ff6b6b;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-right: 12rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.sales-info {
  font-size: 22rpx;
}

.sales {
  color: #999;
}

/* 底部信息 */
.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
}

.rating {
  display: flex;
  align-items: center;
  color: #ff9800;
}

.star {
  margin-right: 4rpx;
}

.rating-score {
  font-weight: 500;
}

.stock {
  color: #999;
}
