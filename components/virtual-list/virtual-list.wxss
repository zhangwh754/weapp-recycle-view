.virtual-scroll-area {
  width: 100%;
  height: 100%;
}

.virtual-list-content {
  width: 100%;
}

.skeleton {
  background-image: repeating-linear-gradient(
    transparent,
    transparent 30rpx,
    #f0f0f0 30rpx,
    #f0f0f0 60rpx,
    transparent 60rpx,
    transparent 80rpx
  );
  background-size: calc(100% - 60rpx) 100%;
  background-position: 30rpx 0;
  background-repeat: repeat-y;
}
